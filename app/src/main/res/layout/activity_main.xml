<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D50909"
    android:gravity="center"

    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Register">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="233dp"
        android:layout_height="206dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/logo_t" />

    <EditText
        android:id="@+id/username_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_margin="5dp"
        android:ems="10"
        android:foreground="@drawable/ic_user"
        android:foregroundGravity="center_vertical|right"
        android:hint="username"
        android:inputType="textPersonName"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFCFC"
        android:ems="10"
        android:layout_margin="5dp"
        android:foreground="@drawable/ic_psw"
        android:foregroundGravity="center_vertical|right"
        android:hint="password"
        android:inputType="textPersonName"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/password2_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:ems="10"
        android:layout_margin="5dp"
        android:foreground="@drawable/ic_psw"
        android:foregroundGravity="center_vertical|right"
        android:hint="retype password"
        android:inputType="textPersonName"
        android:textSize="30sp" />


    <Button
        android:id="@+id/resiter_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:onClick="register"
        android:text="Sign up"
        android:textSize="30sp"

        android:textStyle="bold"
        app:backgroundTint="#28AE2F" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a member?  "
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/login_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go_login"
            android:text="Log In "
            android:textColor="#FBFBFB"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>