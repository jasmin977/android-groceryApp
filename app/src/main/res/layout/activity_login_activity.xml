<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D50909"
    android:gravity="center"

    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".Login_activity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="252dp"
        android:layout_height="201dp"
android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/logo_t" />


    <EditText
        android:id="@+id/username_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FBFBFB"
        android:ems="10"
        android:foreground="@drawable/ic_user"
        android:foregroundGravity="center_vertical|right"
        android:hint="username"
        android:layout_margin="5dp"
        android:inputType="textPersonName"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/password_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:layout_margin="5dp"
        android:background="#F4F4F4"
        android:ems="10"
        android:foreground="@drawable/ic_psw"
        android:foregroundGravity="center_vertical|right"
        android:hint="password"
        android:inputType="textPersonName"
        android:textSize="30sp" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:onClick="login_func"
        android:text="Login"
        android:textSize="30sp"

        android:textStyle="bold"
        app:backgroundTint="#199A1F" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dont have an account?  "
            android:textColor="#FFFFFF"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/signIn_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="go_to_register"
            android:text="Create One "
            android:textColor="#FBFBFB"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>




</LinearLayout>